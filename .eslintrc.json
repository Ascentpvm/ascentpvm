{
  "extends": [
    "airbnb",
    "airbnb/hooks",
    "eslint:recommended",
    "next/core-web-vitals"
  ],
  "parser": "@typescript-eslint/parser",
  "plugins": ["@stylistic"],
  "rules": {
    "@stylistic/type-annotation-spacing": [
      "warn",
      {
        "after": true
      }
    ],
    "react/jsx-filename-extension": [
      2,
      { "extensions": [".js", ".jsx", ".ts", ".tsx"] }
    ],
    "import/prefer-default-export": "off",
    "implicit-arrow-linebreak": "off"
  }
}
